<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/classroom_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="142dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        >
        <!-- Grid of Students NEED-->
        <TextView
            android:id="@+id/teacher_title"
            android:textStyle="bold"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Teacher:"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/teacher_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Teacher Name" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            >
            <!-- Grid of Students NEED-->
            <TextView
                android:id="@+id/classroom_title"
                android:textStyle="bold"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Class:" />


            <TextView
                android:id="@+id/class_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Classroom" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/student_grid"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0"
            android:background="@drawable/border"
            android:scrollbars="vertical"
            android:visibility="visible" />

        <!-- Teams Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Teams"
            android:textStyle="bold" />

        <!-- List of Teams NEED-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teams_grid"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_weight="0"
            android:background="@drawable/border"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>